<!DOCTYPE html>
<html lang="en">
<%- include('shared/metaData', {title: t('nav.home') }) %>

<body class="d-flex flex-column min-vh-100">
  <%- include('shared/header') %>

  <main class="flex-grow-1">
    <section class="py-5 text-center bg-light">
      <div class="container">
        <h1 class="display-4 fw-bold"> <%= t('home.hero.title') %> </h1>
        <p class="lead mt-3 mx-auto" style="max-width: 800px">
          <%- t('home.hero.subtitle') %>
        </p>
        <a href="/<%= i18n.language %>/contact" class="btn btn-primary btn-lg mt-4"><%= t('home.hero.cta') %></a>
      </div>
    </section>

    <!-- PAIN POINTS SECTION -->
    <section class="py-5">
      <div class="container">
        <div class="text-center mb-5">
          <h2 class="fw-bold"><%= t('home.painPoints.title') %></h2>
          <p class="lead text-muted"><%= t('home.painPoints.subtitle') %></p>
        </div>
        <div class="row g-4 text-center">
          <div class="col-md-4">
            <div class="card h-100 p-3 shadow-sm border-0">
              <div class="card-body">
                <i class="fas fa-rocket fa-3x text-primary mb-3"></i>
                <h5 class="card-title fw-bold"><%= t('home.painPoints.card1_title') %></h5>
                <p class="card-text"><%= t('home.painPoints.card1_text') %></p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card h-100 p-3 shadow-sm border-0">
              <div class="card-body">
                <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                <h5 class="card-title fw-bold"><%= t('home.painPoints.card2_title') %></h5>
                <p class="card-text"><%= t('home.painPoints.card2_text') %></p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card h-100 p-3 shadow-sm border-0">
              <div class="card-body">
                <i class="fas fa-cogs fa-3x text-primary mb-3"></i>
                <h5 class="card-title fw-bold"><%= t('home.painPoints.card3_title') %></h5>
                <p class="card-text"><%= t('home.painPoints.card3_text') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-5 bg-light">
      <div class="container">
        <h2 class="text-center fw-bold mb-4"><%= t('home.results.title') %></h2>
        <div class="row g-4 justify-content-center">
          <div class="col-md-5">
            <div class="card h-100 shadow-sm">
              <video autoplay loop muted playsinline src="/Yefrem.mp4" class="card-img-top"
                style="height: 250px; object-fit: cover; object-position: top"
                aria-label="A short video of the Yefrem Mx Shopify store"></video>
              <div class="card-body d-flex flex-column">
                <h3 class="card-title"><%= t('home.results.yefrem_title') %></h3>
                <p class="card-text flex-grow-1"><%= t('home.results.yefrem_text') %></p>
                <a href="https://www.yefrem.mx/" class="btn btn-outline-primary mt-auto align-self-start"
                  target="_blank" rel="noopener noreferrer">
                  <%= t('home.results.yefrem_cta') %>
                </a>
              </div>
            </div>
          </div>

          <div class="col-md-5">
            <div class="card h-100 shadow-sm">
              <img src="/flameBackground.png" class="card-img-top" alt="Arte conceptual de la aplicaciÃ³n Dragon Focus"
                style="height: 250px; object-fit: cover" />
              <div class="card-body d-flex flex-column">
                <h3 class="card-title"><%= t('home.results.dragon_title') %></h3>
                <p class="card-text flex-grow-1"><%- t('home.results.dragon_text') %></p>
                <a href="https://dragon-focus.onrender.com/" class="btn btn-outline-secondary mt-auto align-self-start"
                  target="_blank" rel="noopener noreferrer">
                  <%= t('home.results.dragon_cta') %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-5">
      <div class="container">
        <div class="row align-items-center g-md-5">
          <div class="col-lg-4 text-center">
            <!-- The container is a fixed 300x300px square. overflow:hidden is a safeguard. -->
            <div class="bg-light rounded d-flex align-items-center justify-content-center"
              style="height: 300px; width: 300px; margin: auto; overflow: hidden;">

              <!-- The image is forced to the container's size, and object-fit handles the scaling -->
              <img src="/ProfilePictureSquare.png" alt="Foto profesional de Fernando Sanchez Gutierrez"
                class="shadow img-fluid" style="width: 100%; height: 100%; object-fit: contain;" />

            </div>
          </div>

          <div class="col-lg-8">
            <h2 class="fw-bold"><%= t('home.whyMe.title') %></h2>
            <p class="lead"><%= t('home.whyMe.subtitle') %></p>
            <p><%= t('home.whyMe.text') %></p>
            <a href="/<%= i18n.language %>/about" class="btn btn-outline-primary mt-3"><%= t('home.whyMe.cta') %></a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('shared/footer') %>
</body>

</html>