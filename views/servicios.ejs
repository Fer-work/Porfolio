<!DOCTYPE html>
<html lang="es">
<%- include('shared/metaData', { title: "Servicios de Consultoría" }) %>

<body class="d-flex flex-column min-vh-100">
  <%- include('shared/header') %>

  <main class="flex-grow-1">
    <section class="py-5 text-center bg-light">
      <div class="container">
        <h1 class="display-4 fw-bold"><%= t('servicesPage.hero.title') %></h1>
        <p class="lead mt-3 mx-auto" style="max-width: 800px;">
          <%= t('servicesPage.hero.subtitle') %>
        </p>
      </div>
    </section>

    <section class="py-5">
      <div class="container ">
        <div class="text-center mb-5">
          <h2 class="fw-bold"><%= t('servicesPage.express.title') %></h2>
          <p class="lead text-muted"><%= t('servicesPage.express.subtitle') %></p>
        </div>
        <div class="row justify-content-center g-4">
          <div class="col-lg-4 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm text-center border-primary w-100">
              <div class="card-body d-flex flex-column w-100 flex-grow-1 ">
                <h4 class="card-title fw-bold"><%= t('servicesPage.express.card1_title') %></h4>
                <p class="card-text small"><%= t('servicesPage.express.card1_text') %></p>
                <p class="h3 fw-bold my-3"><%= t('servicesPage.express.card1_price') %> <span
                    class="h6 text-muted"><%= t('servicesPage.express.card1_price_span') %></span></p>
                <p class="small text-muted"><%= t('servicesPage.express.card1_delivery') %></p>
              </div>
            </div>
          </div>

          <!-- Paquete: Sitio Web Informativo -->
          <div class="col-lg-4 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm text-center border-primary w-100">
              <div class="card-body d-flex flex-column">
                <h4 class="card-title fw-bold"><%= t('servicesPage.express.card2_title') %></h4>
                <p class="card-text small"><%= t('servicesPage.express.card2_text') %></p>
                <p class="h3 fw-bold my-3"><%= t('servicesPage.express.card2_price') %> <span
                    class="h6 text-muted"><%= t('servicesPage.express.card2_price_span') %></span></p>
                <p class="small text-muted"><%= t('servicesPage.express.card2_delivery') %></p>
              </div>
            </div>
          </div>

          <!-- Paquete: E-Commerce Básico -->
          <div class="col-lg-4 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm text-center border-primary w-100">
              <div class="card-body d-flex flex-column">
                <h4 class="card-title fw-bold"><%= t('servicesPage.express.card3_title') %></h4>
                <p class="card-text small"><%= t('servicesPage.express.card3_text') %></p>
                <p class="h3 fw-bold my-3"><%= t('servicesPage.express.card3_price') %> <span
                    class="h6 text-muted"><%= t('servicesPage.express.card3_price_span') %></span></p>
                <p class="small text-muted"><%= t('servicesPage.express.card3_delivery') %></p>
              </div>
            </div>
          </div>


        </div>
        <div class="text-center mt-4 pt-3">
          <p><strong><%= t('servicesPage.express.footer_title') %></strong> <%= t('servicesPage.express.footer_text') %>
          </p>
          <p class="small text-muted"> <%= t('servicesPage.express.footer_note') %></p>
        </div>
      </div>
    </section>

    <!-- TIER 2: CONSULTORÍA ESTRATÉGICA -->
    <section class="py-5 bg-light">
      <div class="container">
        <div class="text-center mb-5">
          <h2 class="fw-bold"><%= t('servicesPage.strategic.title') %></h2>
          <p class="lead text-muted"><%= t('servicesPage.strategic.subtitle') %></p>
        </div>
        <div class="row justify-content-center g-4">

          <!-- Proyecto Estratégico a Medida -->
          <div class="col-lg-5 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm border-primary border-2 w-100">
              <div class="card-header bg-primary text-white text-center ">
                <h3 class="my-2"><%= t('servicesPage.strategic.card1_title') %></h3>
              </div>
              <div class="card-body d-flex flex-column">
                <p><%= t('servicesPage.strategic.card1_text') %></p>
                <ul class="list-unstyled flex-grow-1 mt-3">
                  <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>
                    <%= t('servicesPage.strategic.card1_list_item1') %>
                  </li>
                  <li class="mb-2"><i
                      class="fas fa-check-circle text-success me-2"></i><%= t('servicesPage.strategic.card1_list_item2') %>
                  </li>
                  <li class="mb-2"><i
                      class="fas fa-check-circle text-success me-2"></i><%= t('servicesPage.strategic.card1_list_item3') %>
                  </li>
                  <li class="mb-2"><i
                      class="fas fa-check-circle text-success me-2"></i><%= t('servicesPage.strategic.card1_list_item5') %>
                  </li>
                </ul>
                <div class="text-center">
                  <p class="h4 fw-bold"><%= t('servicesPage.strategic.card1_price_title') %></p>
                  <p class="text-muted"><%= t('servicesPage.strategic.card1_price_detail') %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-5 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm border-primary border-2">
              <div class="card-header bg-primary text-white text-center">
                <h3 class="my-2"><%= t('servicesPage.strategic.card2_title') %></h3>
              </div>
              <div class="card-body d-flex flex-column">
                <p class="card-text"><%= t('servicesPage.strategic.card2_text') %></p>
                <ul class="list-unstyled flex-grow-1 mt-3">
                  <li class="mb-2"><i
                      class="fas fa-star text-warning me-2"></i><strong><%= t('servicesPage.strategic.card2_list_item1') %></strong>
                  </li>
                  <li class="mb-2"><i
                      class="fas fa-check-circle text-success me-2"></i><%= t('servicesPage.strategic.card2_list_item2') %>
                  </li>
                  <li class="mb-2"><i
                      class="fas fa-check-circle text-success me-2"></i><%= t('servicesPage.strategic.card2_list_item3') %>
                  </li>
                  <li class="mb-2"><i
                      class="fas fa-check-circle text-success me-2"></i><%= t('servicesPage.strategic.card2_list_item5') %>
                  </li>
                </ul>
                <div class="text-center mt-auto">
                  <p class="h4 fw-bold my-2"><%= t('servicesPage.strategic.card2_price_title') %></p>
                  <p class="text-muted px-3">
                    <%= t('servicesPage.strategic.card2_price_detail') %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-5 ">
      <div class="container">
        <div class="text-center mb-5">
          <h2 class="fw-bold"><%= t('servicesPage.customSoftware.title') %></h2>
          <p class="lead text-muted"><%= t('servicesPage.customSoftware.subtitle') %></p>
        </div>
        <div class="row justify-content-center g-4">

          <div class="col-lg-4 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm border-primary">
              <div class="card-body d-flex flex-column">
                <h4 class="card-title fw-bold"><%= t('servicesPage.customSoftware.card_title') %></h4>
                <p class="card-text"><%= t('servicesPage.customSoftware.card_text') %></p>
                <div class="text-center mt-auto pt-3">
                  <p class="h5"><%= t('servicesPage.customSoftware.card_price_title') %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-5 bg-light">
      <div class="container">
        <div class="row g-5">
          <div class="col-lg-7">
            <h2 class="fw-bold mb-4"><%= t('servicesPage.addons.title') %></h2>
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center ps-0">
                <div>
                  <h6 class="my-0"><%= t('servicesPage.addons.item1_title') %></h6>
                  <small class="text-muted"><%= t('servicesPage.addons.item1_subtitle') %></small>
                </div>
                <span class="badge bg-primary rounded-pill"><%= t('servicesPage.addons.item1_price') %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center ps-0">
                <div>
                  <h6 class="my-0"><%= t('servicesPage.addons.item2_title') %></h6>
                  <small class="text-muted"><%= t('servicesPage.addons.item2_subtitle') %></small>
                </div>
                <span class="badge bg-primary rounded-pill"><%= t('servicesPage.addons.item2_price') %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center ps-0">
                <div>
                  <h6 class="my-0"><%= t('servicesPage.addons.item3_title') %></h6>
                  <small class="text-muted"><%= t('servicesPage.addons.item3_subtitle') %></small>
                </div>
                <span class="badge bg-primary rounded-pill"><%= t('servicesPage.addons.item3_price') %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center ps-0">
                <div>
                  <h6 class="my-0"><%= t('servicesPage.addons.item4_title') %></h6>
                  <small class="text-muted"><%= t('servicesPage.addons.item4_subtitle') %></small>
                </div>
                <span class="badge bg-secondary rounded-pill"><%= t('servicesPage.addons.item4_price') %></span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center ps-0">
                <div>
                  <h6 class="my-0"><%= t('servicesPage.addons.item5_title') %></h6>
                  <small class="text-muted"><%= t('servicesPage.addons.item5_subtitle') %></small>
                </div>
                <span class="badge bg-secondary rounded-pill"><%= t('servicesPage.addons.item5_price') %></span>
              </li>
            </ul>
          </div>
          <div class="col-lg-5">
            <h2 class="fw-bold mb-4"><%= t('servicesPage.paymentOptions.title') %></h2>
            <p><%= t('servicesPage.paymentOptions.subtitle') %></p>
            <a href="/contact" class="btn btn-outline-primary"><%= t('servicesPage.paymentOptions.button') %></a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('shared/footer') %>
</body>

</html>