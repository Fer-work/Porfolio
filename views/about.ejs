<!DOCTYPE html>
<html lang="es">
<%- include("shared/metaData", { title: "Sobre MÃ­" }) %>

<body class="d-flex flex-column min-vh-100">
  <%- include("shared/header") %>

  <main class="flex-grow-1">
    <section class="py-5 text-center bg-light">
      <div class="container">
        <h1 class="display-4 fw-bold"><%= t('aboutPage.hero.title') %></h1>
        <p class="lead mt-3 mx-auto" style="max-width: 800px;">
          <%= t('aboutPage.hero.subtitle') %>
        </p>
      </div>
    </section>

    <section class="py-5">
      <div class="container">
        <div class="row align-items-center g-md-5">
          <div class="col-lg-4 text-center mb-4 mb-lg-0">
            <img src="/ProfileImage.png" alt="Foto profesional de Fernando Sanchez Gutierrez"
              class="img-fluid rounded shadow" style="max-width: 300px; width: 100%;" />
          </div>
          <div class="col-lg-8 ps-lg-5">
            <h2 class="fw-bold text-primary"><%= t('aboutPage.bio.title') %></h2>
            <p><%= t('aboutPage.bio.p1') %></p>
            <p><%= t('aboutPage.bio.p2') %></p>

            <h2 class="fw-bold mt-4 text-primary"><%= t('aboutPage.mission.title') %></h2>
            <p><%= t('aboutPage.mission.p1') %></p>
            <div class="mt-4">
              <a href="/<%= i18n.language %>/servicios"
                class="btn btn-primary"><%= t('aboutPage.mission.cta_services') %></a>
              <a href="/<%= i18n.language %>/contact"
                class="btn btn-outline-secondary ms-2"><%= t('aboutPage.mission.cta_contact') %></a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-5 bg-light">
      <div class="container">
        <h2 class="text-center fw-bold mb-4"><%= t('aboutPage.hobbies.title') %></h2>
        <div class="row g-4 justify-content-center">

          <div class="col-sm-6 col-md-6 col-lg-3 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm w-100">
              <img src="/hobbies/Electronics.jpg" class="card-img-top" style="height: 200px; object-fit: cover;"
                alt="A 555 timer circuit project" />
              <div class="card-body">
                <h5 class="card-title text-center"><%= t('aboutPage.hobbies.card1_title') %></h5>
                <p class="card-text"><%= t('aboutPage.hobbies.card1_text') %></p>
              </div>
            </div>
          </div>

          <div class="col-sm-6 col-md-6 col-lg-3 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm w-100">
              <img src="/hobbies/AquaponicsSquare.JPG" class="card-img-top" style="height: 200px; object-fit: cover;"
                alt="A vertical aquaponics farm prototype" />
              <div class="card-body">
                <h5 class="card-title text-center"><%= t('aboutPage.hobbies.card2_title') %></h5>
                <p class="card-text"><%= t('aboutPage.hobbies.card2_text') %></p>
              </div>
            </div>
          </div>

          <div class="col-sm-6 col-md-6 col-lg-3 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm w-100">
              <img src="/hobbies/YellowBeltSquare.jpg" class="card-img-top"
                style="height: 200px; object-fit: cover; object-position: top;" alt="Fernando in martial arts gear" />
              <div class="card-body">
                <h5 class="card-title text-center"><%= t('aboutPage.hobbies.card3_title') %></h5>
                <p class="card-text"><%= t('aboutPage.hobbies.card3_text') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include("shared/footer") %>
</body>

</html>