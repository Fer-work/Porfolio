<!DOCTYPE html>
<html lang="en">
  <%- include('shared/metaData', { title: "My Projects" }) %>

  <body class="d-flex flex-column min-vh-100"> <%- include('shared/header') %>

    <main class="flex-grow-1">
      <section class="py-5 text-center">
        <div class="container"> <h1 class="display-4">My Projects</h1> <p class="lead mt-3">
            Here are some of the projects I've been working on.
          </p>
        </div>
      </section>

      <section class="py-5 bg-light">
        <div class="container"> <div class="row justify-content-center g-4"> <% if (projects && projects.length > 0) { %>
              <% projects.forEach(project => { %>
              <div class="col-md-6 col-lg-4 mb-4"> <div class="card h-100 shadow-sm"> <% if (project.image) { %>
                  <img
                    src="<%= project.image %>"
                    alt="<%= project.title %> thumbnail"
                    class="card-img-top"
                    style="height: 200px; object-fit: cover;" />
                  <% } %>
                  <div class="card-body d-flex flex-column"> <h3 class="card-title"><%= project.title %></h3>
                    <p class="card-text flex-grow-1"><%= project.description %></p> <div class="mt-auto"> <% if (project.github) { %>
                      <a
                        href="<%= project.github %>"
                        class="btn btn-outline-primary btn-sm <%= project.deployed ? 'me-2' : '' %>" target="_blank"
                        rel="noopener noreferrer" 
                      >
                        <i class="fab fa-github"></i> GitHub
                      </a>
                      <% } %>
                      <% if (project.deployed) { %>
                      <a
                        href="<%= project.deployed %>"
                        class="btn btn-outline-success btn-sm" target="_blank"
                        rel="noopener noreferrer"
                      >
                        <i class="fas fa-external-link-alt"></i> View Live
                      </a>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
            <% } else { %>
              <div class="col">
                <p class="text-center">No projects to display at the moment. Check back soon!</p>
              </div>
            <% } %>
          </div>
        </div>
      </section>

    <%- include('shared/footer') %>
  </body>
</html>