<!DOCTYPE html>
<html lang="es">
<%- include('shared/metaData', { title: "Casos de Ã‰xito" }) %>

<body class="d-flex flex-column min-vh-100">
  <%- include('shared/header') %>

  <main class="flex-grow-1">
    <section class="py-5 text-center bg-light">
      <div class="container">
        <h1 class="display-4 fw-bold"><%= t('caseStudiesPage.hero.title') %></h1>
        <p class="lead mt-3 mx-auto" style="max-width: 800px;">
          <%= t('caseStudiesPage.hero.subtitle') %>
        </p>
      </div>
    </section>

    <section class="py-5">
      <div class="container">
        <div class="row align-items-center g-5">
          <div class="col-lg-6">
            <h2 class="fw-bold"><%= t('caseStudiesPage.yefrem.title') %></h2>
            <span class="badge bg-success mb-3"><%= t('caseStudiesPage.yefrem.badge') %></span>
            <p class="lead">
              <%= t('caseStudiesPage.yefrem.lead') %>
            </p>

            <h5 class="fw-bold mt-4"><%= t('caseStudiesPage.yefrem.challenge_title') %></h5>
            <p><%= t('caseStudiesPage.yefrem.challenge_text') %></p>

            <h5 class="fw-bold mt-4"><%= t('caseStudiesPage.yefrem.solution_title') %></h5>
            <ul class="list-unstyled">
              <li class="mb-2"><i
                  class="fas fa-check text-success me-2"></i><strong><%= t('caseStudiesPage.yefrem.solution_item1_title') %>
                </strong>
                <%= t('caseStudiesPage.yefrem.solution_item1') %>
              </li>
              <li class="mb-2"><i
                  class="fas fa-check text-success me-2"></i><strong><%= t('caseStudiesPage.yefrem.solution_item2_title') %></strong>
                <%= t('caseStudiesPage.yefrem.solution_item2') %></li>
              <li class="mb-2"><i
                  class="fas fa-check text-success me-2"></i><strong><%= t('caseStudiesPage.yefrem.solution_item3_title') %></strong>
                <%= t('caseStudiesPage.yefrem.solution_item3') %></li>
              <li class="mb-2"><i
                  class="fas fa-check text-success me-2"></i><strong><%= t('caseStudiesPage.yefrem.solution_item4_title') %></strong>
                <%= t('caseStudiesPage.yefrem.solution_item4') %></li>
            </ul>

            <h5 class="fw-bold mt-4"><%= t('caseStudiesPage.yefrem.result_title') %></h5>
            <p><%= t('caseStudiesPage.yefrem.result_text') %></p>
          </div>
          <div class="col-lg-6">
            <div class="card shadow-sm">
              <video autoplay loop muted playsinline src="/Yefrem.mp4" class="card-img-top"
                style="height: 400px; object-fit: cover; object-position: top;"
                aria-label="Video de la tienda Yefrem Mx"></video>
              <div class="card-body text-center">
                <a href="https://www.yefrem.mx/" class="btn btn-primary" target="_blank"
                  rel="noopener noreferrer"><%= t('caseStudiesPage.yefrem.cta_button') %></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <hr class="my-5" />

    <section class="py-5">
      <div class="container">
        <div class="row align-items-center g-5 flex-row-reverse">
          <div class="col-lg-6">
            <h2 class="fw-bold"><%= t('caseStudiesPage.dragonFocus.title') %></h2>
            <span class="badge bg-secondary mb-3"><%= t('caseStudiesPage.dragonFocus.badge') %></span>
            <p class="lead">
              <%= t('caseStudiesPage.dragonFocus.lead') %>
            </p>

            <h5 class="fw-bold mt-4"> <%= t('caseStudiesPage.dragonFocus.challenge_title') %></h5>
            <p> <%= t('caseStudiesPage.dragonFocus.challenge_text') %></p>

            <h5 class="fw-bold mt-4"><%= t('caseStudiesPage.dragonFocus.solution_title') %></h5>
            <ul class="list-unstyled">
              <li class="mb-2"><i
                  class="fas fa-check text-success me-2"></i><%= t('caseStudiesPage.dragonFocus.solution_item1') %>
              </li>
              <li class="mb-2"><i
                  class="fas fa-check text-success me-2"></i><%= t('caseStudiesPage.dragonFocus.solution_item2') %>
              </li>
              <li class="mb-2"><i
                  class="fas fa-check text-success me-2"></i><%= t('caseStudiesPage.dragonFocus.solution_item3') %></li>
              <li class="mb-2"><i
                  class="fas fa-check text-success me-2"></i><%= t('caseStudiesPage.dragonFocus.solution_item4') %>
              </li>
            </ul>

            <h5 class="fw-bold mt-4"><%= t('caseStudiesPage.dragonFocus.result_title') %></h5>
            <p><%= t('caseStudiesPage.dragonFocus.result_text') %></p>
          </div>
          <div class="col-lg-6">
            <div class="card shadow-sm">
              <img src="/flameBackground.png" class="card-img-top" style="height: 400px; object-fit: cover;"
                alt="Arte conceptual de Dragon Focus" />
              <div class="card-body text-center">
                <a href="https://dragon-focus.onrender.com/" class="btn btn-primary" target="_blank"
                  rel="noopener noreferrer"><%= t('caseStudiesPage.dragonFocus.cta_button') %></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include("shared/footer") %>
</body>

</html>